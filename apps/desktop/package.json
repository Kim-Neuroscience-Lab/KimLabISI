{
  "name": "isi-control-frontend",
  "version": "1.0.0",
  "description": "ISI Control System Frontend",
  "main": "dist/main/main.js",
  "author": "ISI Lab",
  "build": {
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "files": [
      "dist/main/**/*",
      "dist/preload/**/*",
      "dist/renderer/**/*"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ],
      "artifactName": "isi-control-frontend-${version}-${arch}.${ext}",
      "category": "public.app-category.science"
    },
    "asar": true,
    "asarUnpack": [
      "dist/main/main.js",
      "dist/preload/preload.js"
    ]
  },
  "scripts": {
    "dev": "electron-vite dev",
    "prebuild": "electron-vite build",
    "build": "npm run prebuild && electron-builder",
    "preview": "electron-vite preview",
    "postinstall": "electron-builder install-app-deps && npx electron-rebuild --only zeromq",
    "rebuild": "npx electron-rebuild --only zeromq"
  },
  "dependencies": {
    "chart.js": "^4.5.0",
    "cross-spawn": "^7.0.6",
    "lucide-react": "^0.544.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "zeromq": "^6.5.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@eslint/js": "^9.17.0",
    "@types/node": "^24.5.2",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.1",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "wait-on": "^8.0.3"
  }
}
