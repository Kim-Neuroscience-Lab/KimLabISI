{
  "name": "isi-macroscope-frontend",
  "version": "1.0.0",
  "description": "ISI Macroscope Control System - Electron Frontend (Thin Client)",
  "main": "main.js",
  "author": "ISI Lab",
  "license": "MIT",
  "private": true,
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron . --dev",
    "build": "echo 'Frontend build process would go here'",
    "test": "echo 'Frontend tests would go here'",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.isilab.macroscope",
    "productName": "ISI Macroscope Control System",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ]
    }
  },
  "keywords": [
    "electron",
    "isi",
    "macroscope",
    "neuroscience",
    "thin-client",
    "control-system"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/isilab/macroscope-control"
  }
}